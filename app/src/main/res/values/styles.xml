<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputFieldsStyle">
        <item name="android:layout_width">@dimen/input_fields_width</item>
        <item name="android:layout_height">@dimen/input_fields_height</item>
        <item name="android:textSize">@dimen/input_field_hint_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/input_fields_padding</item>
        <item name="android:layout_marginTop">@dimen/input_fields_top_margin</item>
        <item name="android:background">@drawable/input_field_background</item>
    </style>

</resources>
